<div class="row">
  <div class="panel span5">
    <%= render 'event_form' %>
  </div>

  <div class="panel span7">
    <h4><i class="icon-pushpin"></i> Events</h4>
    <table id="events" class="table table-hover">
      <thead>
        <tr>
          <th>Date</th>
          <th>Title</th>
          <th>No. of Volunteers</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <tr class="nodata">
          <td colspan="4">Loading...</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<script type="text/html" id="event-item">
  <tr>
    <td class="date"></td>
    <td class="title"></td>
    <td class="count"></td>
    <td>
      <a href="#" class="btn edit-btn">Edit</a>
      <a href="#" class="btn btn-danger cancel-btn">Cancel</a>
    </td>
  </tr>
</script>

<% content_for :js  do %>
<script>
  $(function() {
    Events.listRCEvents('<%= current_resource.id %>').listenEvents();
  });
</script>
<% end %>
